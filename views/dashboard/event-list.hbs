<div class="row">
  <div class="col-lg-6">
    <ol class="breadcrumb" style='float:left;'>
      <li><i class="fa fa-user"></i> {{username}}</li>
    </ol>  
  </div>
  <div class="col-lg-6">
    <ol class="breadcrumb" style='float:right;'>
      <li><a href="/dashboard/logout">Logout <i class="fa fa-sign-out"></i></a></li>
    </ol>   
  </div>
</div>
<div class="row">
  <div class="col-lg-3">
    <h4><a href='/dashboard/updates/add'>Add Update</a></h4>
    <h4><a href='/dashboard/event/add'>Add Event</a></h4>
    <h4><a href='/dashboard/event/view'>View Events</a></h4>
    <h4><a href='/dashboard/gallery/add'>Add Gallery</a></h4>
    <h4><a href='/dashboard/images/add'>Add Image</a></h4>
    <h4><a href='/dashboard/images'>View Image</a></h4>
  </div>
  <div class="col-lg-9">
  <h3 class="article-title">Events List</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Date</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each eventList}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>{{date}}</td>
          <td>
              <a href='/dashboard/event/edit?id={{id}}&name={{name}}&date={{date}}&img={{img}}&short={{short}}&report={{report}}'>
                <button class="btn btn-primary">Edit</button>
              </a>
          </td>
          <td><a href='/dashboard/event/view?id={{id}}' onclick="return confirm('Are you sure you want to delete this item?');">
            <button class="btn btn-danger">Delete</button>
          </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>