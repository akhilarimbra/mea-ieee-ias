<div class="row">
  <div class="col-lg-6">
    <ol class="breadcrumb" style='float:left;'>
      <li><i class="fa fa-user"></i> {{username}}</li>
    </ol>  
  </div>
  <div class="col-lg-6">
    <ol class="breadcrumb" style='float:right;'>
      <li><a href="/dashboard/logout">Logout <i class="fa fa-sign-out"></i></a></li>
    </ol>   
  </div>
</div>
<div class="row">
  <div class="col-lg-3">
    <h4><a href='/dashboard/updates/add'>Add Update</a></h4>
    <h4><a href='/dashboard/event/add'>Add Event</a></h4>
    <h4><a href='/dashboard/event/view'>View Events</a></h4>
    <h4><a href='/dashboard/gallery/add'>Add Gallery</a></h4>
    <h4><a href='/dashboard/images/add'>Add Image</a></h4>
    <h4><a href='/dashboard/images'>View Image</a></h4>
  </div>
  <div class="col-lg-9">
  <h3 class="article-title">Images List</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Save Location</th>
        <th>Save Time</th>
        <th>Gallery</th>
        <th>View</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each eventList}}
        <tr>
          <td>{{img}}</td>
          <td>{{datetime}}</td>
          <td>{{#if gallery}}
                {{gallery}}
              {{else}}
                  -------
              {{/if}}
          </td>
          <td><a href='{{img}}' target='blank'><button class="btn btn-danger">View</button></a></td>
          <td>
            <a href='/dashboard/images?img={{img}}' onclick="return confirm('Are you sure you want to delete this item?');">
              <button class="btn btn-danger">Delete</button>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>